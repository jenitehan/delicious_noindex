<?php

/**
 * Implements hook_page_attachments().
 */
function delicious_noindex_page_attachments(array &$attachments) {
  $robots = [
    '#tag' => 'meta',
    '#attributes' => [
      'name' => 'robots',
      'content' => 'noindex, nofollow',
    ],
  ];
  $attachments['#attached']['html_head'][] = [$robots, 'robots'];
}
